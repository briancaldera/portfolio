---
import '@fontsource-variable/inter'
import './tu-bolivar-hoy.css'

interface Props {
  title?: string;
  description?: string;
}

const { 
  title = "CurrencyApp - Currency Exchange Made Simple",
  description = "Get real-time exchange rates, convert currencies, and track your favorite pairs all in one place."
} = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="description" content={description} />
    <title>{title}</title>
  </head>
  <body class="font-inter">
    <slot />
  </body>
</html>
